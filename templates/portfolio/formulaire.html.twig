{% extends 'base.html.twig' %}

{% block title %}Mon Eportfolio{% endblock %}

{% block body %}
<div class="page-container">
    <div class="container text-center">
        <h1 class="mt-4">Formulaire</h1>

        <div class="content-box">
            <form method="POST" action="/submit">
            <div class="form-group">
                <label for="name">Nom complet :</label>
                <input type="text" id="name" name="name" class="form-control" placeholder="Entrez votre nom" required>
            </div>
            <div class="form-group">
                <label for="email">Adresse e-mail :</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Entrez votre e-mail" required>
            </div>
            <div class="form-group">
                <label for="message">Message (facultatif) :</label>
                <textarea id="message" name="message" class="form-control" placeholder="Ajoutez un message..."></textarea>
            </div>
                <a href="/PDF/CV.pdf" class="btn btn-primary" id="download-button" download disabled>Télécharger le CV</a>
                </form>
        </div>


    <footer class="footer">
        <p>&copy; 2025 Tavernier Noa - Tous droits réservés.</p>
        <p>Mentions Légales</p>
    </footer>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        const nameField = document.getElementById('name');
        const emailField = document.getElementById('email');
        const downloadButton = document.getElementById('download-button');

        function checkForm() {
            const nameValue = nameField.value.trim();
            const emailValue = emailField.value.trim();

            if (nameValue !== '' && emailValue !== '') {
                downloadButton.removeAttribute('disabled');
            } else {
                downloadButton.setAttribute('disabled', 'disabled');
            }
        }


        nameField.addEventListener('input', checkForm);
        emailField.addEventListener('input', checkForm);


        downloadButton.addEventListener('click', function (e) {
            if (downloadButton.hasAttribute('disabled')) {
                e.preventDefault();
                alert('Veuillez remplir tous les champs obligatoires avant de télécharger le CV.');
            }
        });
    });
</script>

{% endblock %}

{% block stylesheets %}
    <style>

        .page-container {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            padding-top: 2rem;
        }
        .content-box {
            background-color: rgba(255, 255, 255, 0.7);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            max-width: 80%;
            margin: 50px auto 20px auto;
        }

        h1 {
            font-size: 5vw;
            margin: 0;
            color: #fff;
            opacity: 0.9;
        }

        .titre-box {
            color: #333;
            line-height: 1.6;
            font-size: 2rem;
        }

        .text-box {
            color: #333;
            line-height: 1.6;
            font-size: 1.2rem;
        }

        a {
            margin-top: 20px;
        }


        .footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 20px;
            width: 100%;
            margin-top: auto;
        }

        .footer a {
            color: #fff;
            text-decoration: none;
        }

        .footer a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}
